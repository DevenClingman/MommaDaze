<% @blogs.each do |blog| %>
  <div class="row">
    <div class="col s2"></div>
    <div class="col s8">
      <div class="card">
        <div class="card-title">
          <span><%= blog.title %></span>
        </div>
        <div class="card-image">
          <%= image_tag blog_img(blog.thumb_image, "thumb_image") %>
        </div>
        <div class="card-content">
          <%= blog.content.slice(0, 200) %>...
        </div>
        <div class="card-action">
          <%= link_to "Keep Reading...", blog %>
        </div>
        <br><br>
          <%= link_to "Edit Blog", edit_blog_path(blog) if logged_in?(:site_admin) %>
      </div>
    </div>
    <div class="col s2"></div>
  </div>
<% end %>
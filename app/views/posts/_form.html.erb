<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :title, id: :post_title, placeholder: "Title" %>
  </div>

  <div class="field">
    <%= form.text_area :description, id: :post_description, placeholder: "Description" %>
  </div>

  <div class="field">
    <label class="waves-effect waves-light btn">
      Upload Image <%= form.file_field :image, style: 'display:none;' %>
    </label>
  </div>

  <div class="field hidden">
    <%= form.text_field :tag_list, id: :text_field %>
  </div>

  <br><br>

  <div class="waves-effect waves-light btn">
    <%= form.submit %>
  </div>
<% end %>

<%= render 'shared/tag_checkbox' %>